<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="com.a3035347861.hku.smartphoneasg1.startScreen"
    android:background="@color/colorPrimaryDark"
    >

    <TextView
        android:id="@+id/startscreen_startgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startscreen_tap"
        android:layout_marginBottom="27dp"
        android:layout_alignBottom="@+id/startscreen_imageView"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="12pt"
        android:textColor="@color/White"
        android:shadowColor="@color/Black"
        android:shadowDx="4"
        android:shadowRadius="4"
        android:shadowDy="4"/>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/startscreen"
        android:id="@+id/startscreen_imageView"
        android:contentDescription="@string/just_a_start_image"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/startscreen"/>

    <TextView
        android:id="@+id/startscreen_stdid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textColor="@color/White"
        android:shadowColor="@color/Black"
        android:shadowDx="4"
        android:shadowRadius="4"
        android:shadowDy="4"
        android:layout_below="@+id/startscreen_stdname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/startscreen_stdname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textColor="@color/White"
        android:shadowColor="@color/Black"
        android:shadowDx="4"
        android:shadowRadius="4"
        android:shadowDy="4"
        android:layout_alignTop="@+id/startscreen_imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/startscreen_button"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>
